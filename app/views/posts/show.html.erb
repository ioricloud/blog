<h1><%= @post.title %></h1>

<%= @post.text %>

<h3>Comentarios</h3>
	
	<% @post.comments.each do |comment| %>
		<p><%= comment.text %></p>
		<p><%= time_ago_in_words comment.created_at %> atras</p>
		<p><%= link_to "Deletar Commentario", [@post, comment], :method => :delete, :confirm => "Tem Certeza" %></p>
	<% end %>

<%= form_for [@post, @post.comments.build] do |f| %>
	<p><%= f.text_area :text, :size => '40x10' %></p>
	<p><%= f.submit "Comentar" %></p>
<% end %>

<p>
<%= link_to 'Voltar', posts_path %>
|
<%= link_to 'Editar', edit_post_path(@post) %>
|
<%= link_to 'Deletar', @post, :method => :delete, :confirm => "Tem Certeza?" %>
</p>